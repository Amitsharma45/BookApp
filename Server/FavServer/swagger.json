{
  "swagger": "2.0",
  "info": {
    "title": "Search feature API",
    "description": "API developed in ExpressJS to fetch data related to books and authors from OpenLibrary API",
    "version": "1.0"
  },
  "produces": ["application/json"],
  "host": "localhost:8001",
  "basePath": "/api",
  "paths": {
    "/getfavorite": {
      "get": {
        "x-swagger-router-controller": "Get Books from Favorite",
        "tags": ["Get All Books from Favorite List"],
        "description": "Returns all books store in the Favorite List",
        "parameters": [
          {
            "in": "query",
            "name": "_id",
            "description": "Unique Id of the User",
            "type": "string",
            "required": true,
            "example": "963"
          }
        ],
        "responses": {
          "200": {
            "description": "Book Added to favorite SuccessFully"
          },
          "404": {
            "description": "Error"
          }
        }
      }
    },
    "/addfavorite": {
      "post": {
        "x-swagger-router-controller": "Add To Favorite",
        "tags": ["To add Book into the Favorite List"],
        "description": "To Add Book into Favorites",
        "parameters": [
          {
            "in": "body",
            "name": "Book Detail",
            "description": "coverImage Id of the Book",
            "schema": {
              "$ref": "#/definitions/FavoriteModel"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Book Added to favorite SuccessFully",
            "schema": {
              "$ref": "#/definitions/FavoriteModel"
            }
          },
          "404": {
            "description": "Error"
          }
        }
      }
    },
    "/removefavorite": {
      "put": {
        "x-swagger-router-controller": "Remove Book from Favorite",
        "tags": ["Remove Book from Favorite List"],
        "description": "To Remove Book from Favorites",
        "parameters": [
          {
            "in": "body",
            "name": "Book Detail",
            "description": "coverImage Id of the Book",
            "schema": {
              "properties": {
                "_id": {
                  "type": "string",
                  "format": "string",
                  "example": "963"
                },
                "coverImage": {
                  "type": "number",
                  "format": "number",
                  "example": "10521275"
                }
              }
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Book Removed from favorite SuccessFully"
          },
          "404": {
            "description": "Error"
          }
        }
      }
    }
  },
  "definitions": {
    "FavoriteModel": {
      "required": ["_id", "coverImage", "key", "title"],
      "properties": {
        "_id": {
          "type": "string",
          "uniqueItems": true
        },
        "coverImage": {
          "type": "number",
          "uniqueItems": true
        },
        "key": {
          "type": "string"
        },
        "title": {
          "type": "string"
        }
      }
    }
  }
}
