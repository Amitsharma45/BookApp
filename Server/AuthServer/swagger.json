{
  "swagger": "2.0",
  "info": {
    "title": "Search feature API",
    "description": "API developed in ExpressJS to fetch data related to books and authors from OpenLibrary API",
    "version": "1.0"
  },
  "produces": ["application/json"],
  "host": "localhost:8003",
  "basePath": "/api",
  "paths": {
    "/login": {
      "post": {
        "x-swagger-router-controller": "Add To Favorite",
        "tags": ["To add Book into the Favorite List"],
        "description": "To Add Book into Favorites",
        "parameters": [
          {
            "in": "body",
            "name": "Login Details",
            "description": "Email Id and Password",
            "schema": {
              "properties": {
                "email": {
                  "type": "string",
                  "format": "string",
                  "example": "test@gmail.com"
                },
                "password": {
                  "type": "string",
                  "format": "string",
                  "example": "123456"
                }
              }
            }
          }
        ],
        "responses": {
          "200": {
            "description": "User Login to Website"
          },
          "404": {
            "description": "Invalid Email or Password"
          }
        }
      }
    },
    "/register": {
      "post": {
        "x-swagger-router-controller": "Remove Book from Favorite",
        "tags": ["Remove Book from Favorite List"],
        "description": "To Remove Book from Favorites",
        "parameters": [
          {
            "in": "body",
            "name": "Register User",
            "description": "Creating new Account",
            "schema": {
              "$ref": "#/definitions/UserModel"
            }
            
          }
        ],
        "responses": {
          "200": {
            "description": "Book Removed from favorite SuccessFully",
            "schema": {
              "$ref": "#/definitions/UserModel"
            }
          },
          "404": {
            "description": "Error"
          }
        }
      }
    },
    "/profile": {
      "get": {
        "x-swagger-router-controller": "Get User Profile",
        "tags": ["Get User Details"],
        "description": "Returns User profile",
        "parameters": [
          {
            "in": "header",
            "name": "Authorization",
            "description": "Unique Id of the User",
            "type": "string",
            "required": true
          }
        ],
        "responses": {
          "200": {
            "description": "User Profile object"
          },
          "404": {
            "description": "Error"
          }
        }
      }
    },
    "/isAuthenticated": {
      "get": {
        "x-swagger-router-controller": "Get User isAuthenticated or not",
        "tags": ["Get User isAuthenticated or Not"],
        "description": "Returns User profile",
        "parameters": [
          {
            "in": "header",
            "name": "Authorization",
            "description": "Unique Id of the User",
            "type": "string",
            "required": true
          }
        ],
        "responses": {
          "200": {
            "description": "Return Ture or false"
          },
          "404": {
            "description": "Error"
          }
        }
      }
    },
    "/changepassword": {
      "put": {
        "x-swagger-router-controller": "changepassword",
        "tags": ["Change Password"],
        "description": "Returns User profile",
        "parameters": [
          {
            "in": "header",
            "name": "Authorization",
            "description": "Jwt Toekn",
            "type": "string",
            "required": true
          },{
            "in": "body",
            "name": "User Password",
            "description": "Change Password",
            "schema": {
              "properties": {
                "password": {
                  "type": "string",
                  "required": true
                },
                "newpassword": {
                  "type": "string",
                  "required": true
                }
              }
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Your PassWord Change Succesfully"
          },
          "404": {
            "description": "Please Check Your Current Password"
          }
        }
      }
    },
    "/updateProfile": {
      "put": {
        "x-swagger-router-controller": "updateProfile",
        "tags": ["Update Profile"],
        "description": "User profile update",
        "parameters": [
          {
            "in": "header",
            "name": "Authorization",
            "description": "Jwt Toekn",
            "type": "string",
            "required": true
          },{
            "in": "body",
            "name": "User Details",
            "description": "Update Profile",
            "schema": {
              "properties": {
                "firstName": {
                  "type": "string",
                  "required": true
                },
                "lastName": {
                  "type": "string",
                  "required": true
                }
              }
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Your profile Change Succesfully"
          },
          "404": {
            "description": "Error"
          }
        }
      }
    },
    "/createotp": {
      "post": {
        "x-swagger-router-controller": "Change Password",
        "tags": ["Create OTP"],
        "description": "opt create success",
        "parameters": [
          {
            "in": "body",
            "name": "email",
            "description": "Generate OTP",
            "schema": {
              "properties": {
                "email": {
                  "type": "string",
                  "required": true
                }
              }
            }
          }
        ],
        "responses": {
          "200": {
            "description": "We Have send One Time Password(OTP) to your Email id. OTP is valid for next 5 min"
          },
          "404": {
            "description": "Please Check Your Email Id"
          }
        }
      }
    },
    "/resetpassword": {
      "post": {
        "x-swagger-router-controller": "Reset Password",
        "tags": ["Reset Password"],
        "description": "Reset Password",
        "parameters": [
          {
            "in": "body",
            "name": "email",
            "description": "Generate OTP",
            "schema": {
              "properties": {
                "email": {
                  "type": "string",
                  "required": true
                },"otp": {
                  "type": "string",
                  "required": true
                },"password": {
                  "type": "string",
                  "required": true
                }
              }
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Your Password Reset Successfully"
          },
          "404": {
            "description": "inValid opt"
          }
        }
      }
    }
  },
  "definitions": {
    "UserModel": {
      "required": ["_id", "firstName", "lastName", "email","password"],
      "properties": {
        "_id": {
          "type": "string",
          "uniqueItems": true
        },
        "firstName": {
          "type": "string"
        },
        "lastName": {
          "type": "string"
        },
        "email": {
          "type": "string",
          "uniqueItems": true
        },
        "password": {
          "type": "string"
        }
      }
    }
  }
}
